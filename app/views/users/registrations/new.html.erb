<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, required: true, maxlength: 25, placeholder: 'Enter Full Name', id: "user-name" %>
  </div>

  <%= f.fields_for :company, resource.build_company do |company_builder| %>
    <div class="field">
      <%= company_builder.label :phone_number %>
      <%= company_builder.telephone_field :phone_number, required: true, placeholder: 'Enter Phone Number', id: "phone", maxlength: 18 %>
    </div>

    <div class="field">
      <%= company_builder.label :name %>
      <%= company_builder.text_field :name, required: true, maxlength: 30, size: 0, placeholder: 'Enter Company Name' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
