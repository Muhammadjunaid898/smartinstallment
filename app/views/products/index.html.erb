<h1 class="d-flex justify-content-center p-4">All Products</h1>
<div class="container">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Identification Number</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.identification_number %></td>
          <td><%= product.description %></td>
          <td class="d-flex">
            <%= link_to 'New', new_product_path, class: 'btn btn-secondary me-2' %>
            <%= link_to 'View', product_path(@product), class: 'btn btn-secondary me-2' %>
            <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-secondary me-2' %>
            <%= link_to 'Delete', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary me-2' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
